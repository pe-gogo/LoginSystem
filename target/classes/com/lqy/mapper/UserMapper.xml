<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lqy.mapper.UserMapper" >
    <insert id="add" parameterType="com.lqy.poji.User">
        insert into tb_user values(null,#{username},#{password})
    </insert>

    <select id="selectUser" resultType="com.lqy.poji.User">
        select *from tb_user;
    </select>
    <select id="selectByUsername" resultType="com.lqy.poji.User">
        select * from tb_user where username=  #{username}
    </select>

</mapper>